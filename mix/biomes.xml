<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE biomes [
	<!ELEMENT biomes (realm+)>
	<!ELEMENT realm (biome+)>
	<!ELEMENT biome (groundGlyphs?, encounters?, cultures?, darken?, clutterdefs?)>

	<!ELEMENT groundGlyphs (#PCDATA)>
	<!ELEMENT encounters (#PCDATA)>
	<!ELEMENT cultures (#PCDATA)>
	<!ELEMENT darken EMPTY>
	<!ELEMENT clutterdefs (clutter+)>
	<!ELEMENT clutter EMPTY>

	<!ATTLIST realm
		id ID #REQUIRED
	>
	<!ATTLIST biome
		name CDATA #REQUIRED
		color CDATA #REQUIRED
		isWater CDATA #IMPLIED
		canBurn CDATA #IMPLIED
	>
	<!ATTLIST encounters
		max CDATA #IMPLIED
	>
	<!ATTLIST darken
		plus CDATA #REQUIRED
		div CDATA #REQUIRED
	>
	<!ATTLIST clutter
		char CDATA #REQUIRED
		color CDATA #REQUIRED
		background CDATA #IMPLIED
		canBurn CDATA #IMPLIED
		solid (no|yes|wall) "yes"
		description CDATA #IMPLIED
		chance CDATA #IMPLIED
	>
]>
<biomes>
	<realm id="Nox">
		<biome name="Water" color="#00007F" isWater="true" />

		<biome name="Grassland" color="#1D3612" canBurn="true">
			<encounters max="10">wild_dog, canine, canine, goblin, slime</encounters>
			<clutterdefs>
				<clutter char="&#x2663;" color="#5A9640" canBurn="true" solid="wall" description="3" />
				<clutter char="&#x2601;" color="gray" chance="0.016" description="4" />
			</clutterdefs>
		</biome>
		<biome name="Tundra" color="FFFFFF">
			<groundGlyphs>&#x201E; ~/</groundGlyphs>
			<encounters max="10">imp, imp, wild_dog, imp</encounters>
			<darken div="0.05" plus="8" />
			<clutterdefs>
				<clutter char="&#x2601;" color="gray" description="4" chance="0.01" />
				<clutter char="&#x2020;" color="#563F2C" description="3" canBurn="true" chance="0.01" />
			</clutterdefs>
		</biome>
		<biome name="Desert" color="#69602C">
			<groundGlyphs>-_&#x203E;</groundGlyphs>
			<encounters max="10">snake, snake, naga, naga, naga, slime, imp</encounters>
			<clutterdefs>
				<clutter char="&#x2601;" color="#A7A7A7" description="4" chance="0.01" />
				<clutter char="&#x0470;" color="#6CCC77" description="5" canBurn="true" />
			</clutterdefs>
		</biome>
		<biome name="Taiga" color="#9EC4AB">
			<darken div="4" plus="2" />
			<clutterdefs>
				<clutter char="&#x2020;" color="#563F2C" description="3" canBurn="true" chance="0.02" />
				<clutter char="&#x2601;" color="gray" description="4" />
				<clutter char="&#x2660;" color="#244428" canBurn="true" solid="wall" chance="0.02" description="3" />
			</clutterdefs>
		</biome>
		<biome name="Woods" color="#1F3B19" canBurn="true">
			<clutterdefs>
				<clutter char="&#x2660;" color="#439838" canBurn="true" solid="wall" chance="0.018" description="3" />
				<clutter char="&#x2663;" color="#6CCC77" canBurn="true" solid="wall" chance="0.022" description="3" />
				<clutter char="&#x2601;" color="gray" chance="0.016" description="4" />
			</clutterdefs>
		</biome>

		<biome name="Swamp" color="#343B2C">
			<clutterdefs>
				<clutter char="&#x2020;" color="black" description="3" canBurn="true" chance="0.04" />
			</clutterdefs>
		</biome>
		<!--
		<biome name="Rainforest" color="#1D3612" canBurn="true">
			<clutterdefs>
				<clutter char="&#x2660;" color="#439838" canBurn="true" solid="wall" chance="0.1" description="3" />
				<clutter char="&#x2660;" color="#57AA5A" canBurn="true" solid="wall" chance="0.3" description="3" />
				<clutter char="&#x2660;" color="#6CCC77" canBurn="true" solid="wall" chance="0.2" description="3" />
			</clutterdefs>
		</biome>
		-->
	</realm>
	<realm id="Seradevari">
		<biome name="KoolAid" color="#B22222" isWater="true" />
		
		<biome name="Nether" color="#3D1607">
			<groundGlyphs>#x.-/~</groundGlyphs>
			<encounters max="10">foocubus, imp</encounters>
			<cultures>seradevar</cultures>
			<darken div="1" plus="2"/>
		</biome>
	</realm>
</biomes>