<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE biomes [
	<!ELEMENT biomes (realm+)>
	<!ELEMENT realm (biome+)>
	<!ELEMENT biome (groundGlyphs?, encounters?, cultures?, clutterdefs?)>

	<!ELEMENT groundGlyphs (#PCDATA)>
	<!ELEMENT encounters (#PCDATA)>
	<!ELEMENT cultures (#PCDATA)>
	<!ELEMENT clutterdefs (clutter+)>
	<!ELEMENT clutter EMPTY>

	<!ATTLIST realm
		id ID #REQUIRED
		waterLevel CDATA #REQUIRED
	>
	<!ATTLIST biome
		name CDATA #REQUIRED
		color CDATA #REQUIRED
		rect CDATA #REQUIRED
		isWater CDATA #IMPLIED
		canBurn CDATA #IMPLIED
	>
	<!ATTLIST encounters
		max CDATA #IMPLIED
	>
	<!ATTLIST clutter
		char CDATA #REQUIRED
		color CDATA #REQUIRED
		background CDATA #IMPLIED
		canBurn CDATA #IMPLIED
		solid (no|yes|wall) "yes"
		description CDATA #IMPLIED
		leaves (no|yes) "no"
		chance CDATA #IMPLIED
	>
]>
<biomes>
	<realm id="Nox" waterLevel="64">
		<biome name="Water" rect="0 0 0 0" color="#00007F" isWater="true">
			<groundGlyphs>&#x157;&#x157;&#x157;</groundGlyphs>
		</biome>

		<biome name="Grassland" rect="48 0 184 96" color="#1D3612" canBurn="true">
			<encounters max="10">wild_dog, canine, canine, goblin, slime</encounters>
			<clutterdefs>
				<clutter char="&#x1E5;" color="#5A9640" canBurn="true" solid="wall" description="3" />
				<clutter char="&#x143;" color="gray" chance="0.016" description="4" />
			</clutterdefs>
		</biome>
		<biome name="Tundra" rect="0 0 48 192" color="FFFFFF">
