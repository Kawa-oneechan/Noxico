<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE choices [
	<!ELEMENT choices (choice+)>
	<!ELEMENT choice (message*, fromhere?, limitations?, actions?)>
	<!ELEMENT message (#PCDATA)>
	<!ELEMENT fromhere (option+)>
	<!ELEMENT limitations (limitation+)>
	<!ELEMENT actions (action|compare)+>
	<!ELEMENT option EMPTY>
	<!ELEMENT limitation EMPTY>
	<!ELEMENT action EMPTY>
	<!ELEMENT compare (message*)>
	<!ATTLIST choice
		id ID #REQUIRED
		caption CDATA #REQUIRED
	>
	<!ATTLIST message
		pov (you|they) "you"
	>
	<!ATTLIST option
		id IDREF #REQUIRED
	>
	<!ATTLIST limitation
		name CDATA #REQUIRED
	>
	<!ATTLIST action
		type CDATA #REQUIRED
		num CDATA #IMPLIED
		path CDATA "havingsex"
		value CDATA #IMPLIED
	>
	<!ATTLIST compare
		type CDATA #REQUIRED
		your CDATA #REQUIRED
		his CDATA #IMPLIED
	>
]>
<choices>
	<choice id="wait" caption="Wait">
	</choice>
	<choice id="walkaway" caption="Walk away">
		<message pov="you">You release [b:name] and get up.</message>
		<message pov="they">[t:name] lets go of you and gets up.</message>
		<limitations>
			<limitation name="noRestrained" />
		</limitations>
		<actions>
			<action type="break" />
		</actions>
	</choice>
	<choice id="cuddle" caption="Cuddle">
		<message pov="you">You cuddle up to [b:name].</message>
		<message pov="you">You rub your body againt [b:name].</message>
		<message pov="they">[b:name] cuddle up to you.</message>
		<message pov="they">[b:name] rubs [b:his] body against you.</message>
		<fromhere>
			<option id="kiss" />
			<option id="frenchkiss" />
			<option id="pindown" />
			<!--
			<option id="takeofftop" />
			<option id="takeoffbottom" />
			-->
		</fromhere>
		<limitations>
			<limitation name="consentual" />
			<limitation name="noRestrained" />
			<limitation name="noRestraining" />
		</limitations>
		<actions>
			<action type="increase" num="0" path="climax" value="1" />
			<action type="increase" num="1" path="climax" value="1" />
		</actions>
	</choice>
	<choice id="pindown" caption="Pin down">
		<message pov="you">You grab [b:name]'s arms and hold them tightly in place.</message>
		<message pov="they">[b:name] grabs your arms and holds on tight.</message>
		<fromhere>
			<option id="kiss" />
			<option id="frenchkiss" />
			<option id="release" />
		</fromhere>
		<limitations>
			<limitation name="noRestrained" />
			<limitation name="noRestraining" />		
		</limitations>
		<actions>
			<action type="addtoken" num="0" value="restraining" />
			<action type="addtoken" num="1" value="restrained" />
		</actions>
	</choice>
	<choice id="release" caption="Release">
		<message pov="you">You let go of [b:name]'s arms.</message>
		<message pov="they">[b:name] releases [b:his] grip.</message>
		<fromhere>
			<option id="kiss" />
			<option id="frenchkiss" />
			<option id="pindown" />
			<!--
			<option id="takeofftop" />
			<option id="takeoffbottom" />
			-->
		</fromhere>
		<limitations>
			<limitation name="noRestrained" />
			<limitation name="restraining" />
		</limitations>
		<actions>
			<action type="removetoken" num="0" value="restraining" />
			<action type="removetoken" num="1" value="restrained" />
		</actions>
	</choice>
	<choice id="struggle" caption="Struggle">
		<message pov="you">You grab [b:name]'s arms and hold them tightly in place.</message>
		<message pov="they">[b:name] grabs your arms and holds on tight.</message>
		<fromhere>
			<option id="kiss" />
			<option id="frenchkiss" />
			<option id="pindown" />
			<!--
			<option id="takeofftop" />
			<option id="takeoffbottom" />
			-->
		</fromhere>
		<limitations>
			<limitation name="restrained" />
			<limitation name="noRestraining" />
		</limitations>
		<actions>
			<compare type="roll" your="Strength" his="Strength">
				<message pov="you">You struggle against [b:name]'s hold, but fail to get free.</message>
				<message pov="they">[b:name] struggles against your hold, but fails to get free.</message>
			</compare>
			<action type="removetoken" num="0" value="restrained" />
			<action type="removetoken" num="1" value="restraining" />
		</actions>
	</choice>
	<choice id="kiss" caption="Kiss">
		<message pov="you">kissu~</message>
		<message pov="they">kissu~</message>
		<fromhere>
			<option id="kiss" />
			<option id="frenchkiss" />
			<option id="pindown" />
			<!--
			<option id="takeofftop" />
			<option id="takeoffbottom" />
			-->
		</fromhere>
		<limitations>
			<limitation name="consentual" />
		</limitations>
		<actions>
			<action type="increase" num="0" path="climax" value="2" />
			<action type="increase" num="1" path="climax" value="2" />
		</actions>
	</choice>
	<choice id="frenchkiss" caption="French kiss">
		<message pov="you">fkissu~</message>
		<message pov="they">fkissu~</message>
		<fromhere>
			<option id="kiss" />
			<option id="frenchkiss" />
			<option id="pindown" />
			<!--
			<option id="takeofftop" />
			<option id="takeoffbottom" />
			-->
		</fromhere>
		<limitations>
			<limitation name="consentual" />
		</limitations>
		<actions>
			<action type="increase" num="0" path="climax" value="3" />
			<action type="increase" num="1" path="climax" value="3" />
		</actions>
	</choice>
</choices>