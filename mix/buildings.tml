-- #region Town buildings
set: town
	template: simple test
		inhabitants: 1
		map
			<[[
				'''''''''
				'====='''
				'=Tc.='''
				'=c..+,,,
				'=-.-==='
				'=A...C='
				'=B..ab='
				'======='
			]]>
		markings
			A: bed
				owner: 1
			a: bed
				owner: 2
			B: container
				clothes
				owner: 1
			b: container
				clothes
				owner: 2
			C: tile
				index: 15
			c: clutter
				id: chair
			T: clutter
				id: table
	
	template: simple test 2
		inhabitants: 1
		map
			<[[
				''','''''
				'==+===='
				'=B...A='
				'=b..a=='
				'======''
				'''''''''
			]]>
		markings
			A: bed
				owner: 1
			a: bed
				owner: 2
			B: container
				clothes
				owner: 1
			b: container
				clothes
				owner: 2

	template: simple test 3
		inhabitants: 2
		map
			<[[
				'''''''''
				'======='
				'=BA...='
				'=ba...+,
				'======='
				'''''''''
			]]>
		markings
			A: bed
				owner: 1
			a: bed
				owner: 2
			B: container
				clothes
				owner: 1
			b: container
				clothes
				owner: 2

	template: wide test
		inhabitants: 1
		map
			<[[
				'''''''''''
				'========='
				'=A.B-b.a='
				'=...-...='
				'=-+---+-='
				'=c......='
				'=Tc=+=..='
				'====,=DD='
				''''',===='
				''''','''''
			]]>
		markings
			A: bed
				owner: 1
			a: bed
				owner: 2
			B: container
				clothes
				owner: 1
			b: container
				clothes
				owner: 2
			c: clutter
				id: chair
			T: clutter
				id: table
			D: tile
				index: 15
-- #endregion



