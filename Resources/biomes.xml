<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE biomes [
	<!ELEMENT biomes (realm+)>
	<!ELEMENT realm (biome+)>
	<!ELEMENT biome ANY>
	<!ATTLIST realm
		id ID #REQUIRED
		waterLevel CDATA #REQUIRED
	>
	<!ATTLIST biome
		name CDATA #REQUIRED
		rect CDATA #REQUIRED
		color CDATA #REQUIRED
		music CDATA #IMPLIED
		isWater CDATA #IMPLIED
		canBurn CDATA #IMPLIED
	>
]>
